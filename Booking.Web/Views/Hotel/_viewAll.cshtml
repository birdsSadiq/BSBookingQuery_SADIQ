@model IEnumerable<Booking.Model.Hotel>
@{
    Layout = null;
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                <a onclick="showInPopup('@Url.Action("Edit","Hotel",null,Context.Request.Scheme)','New Hotel')" class="btn btn-sm btn-success text-white">
                    <i class="fa-solid fa-plus"></i>Add Hotel
                </a>
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    <a onclick="showInPopup('@Url.Action("Edit","Hotel",new {id=item.Id},Context.Request.Scheme)','Update Hotel')" class="btn btn-sm btn-secondary">
                        <i class="fas fa-pencil-alt"></i> Edit
                    </a>
                    <a onclick="showInPopup('@Url.Action("Details","Hotel",new {id=item.Id},Context.Request.Scheme)','Hotel Info')" class="btn btn-sm btn-info">
                        <i class="fa-regular fa-eye"></i> View
                    </a>
                    <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                        <input type="hidden" asp-for="@item.Id" />
                        <input type="submit" value="Delete" class="btn btn-sm btn-warning" />
                    </form>
                </td>
                <td>
                    <a onclick="showInPopup('@Url.Action("Edit","HotelComment",new {id=item.Id},Context.Request.Scheme)','Add Comments')" class="btn btn-sm btn-secondary">
                        <i class="fa-solid fa-plus"></i> Add Comment
                    </a>
                    <a onclick="showInPopup('@Url.Action("Index","HotelComment",new {id=item.Id},Context.Request.Scheme)','Comments')" class="btn btn-sm btn-info">
                        <i class="fa-regular fa-eye"></i> View Comments
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
